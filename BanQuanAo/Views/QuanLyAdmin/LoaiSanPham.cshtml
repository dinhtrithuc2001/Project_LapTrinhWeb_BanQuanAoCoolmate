@using BanQuanAo.Models
@using PagedList.Mvc;
@model PagedList.PagedList<LOAI>

@{
    ViewBag.Title = "LoaiSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<a href="@Url.Action("themmoiloaiSanPham","QuanLyAdmin")" class="ADD-Btn">
    <p class="text">THEM LOAI SAN PHAM</p>
</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên Loại Sản Phẩm")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "SuaLoaiSanPham", new { id = item.MaLoai })               
            </td>
        </tr>
    }

</table>
<div class="page">
    @Html.PagedListPager(Model, page => Url.Action("LoaiSanPham", new { page = page }))
</div>
@section MenuTrangAdmin{
    <style>
        .pagination {
            display: flex;
            padding-left: 0;
            list-style: none;
            justify-content: center;
            margin: 2rem 0;
        }

            .pagination > li > a {
                font-weight: 500;
                padding: 9px 15px;
                position: relative;
                display: block;
                color: black;
                text-decoration: none;
                background-color: #fff;
                border: 1px solid #dee2e6;
            }

        .page {
            text-align: center;
            justify-content: center;
            display: inline;
        }
    </style>
}