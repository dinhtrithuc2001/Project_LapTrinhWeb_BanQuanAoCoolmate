
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section class="login container">
    <h2 class="login__title title">Đăng ký thành viên</h2>
    <span>@ViewBag.Thongbaodangky</span>
    <div class="login__form">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div>
                <input type="text" class="form-control " placeholder="Tài khoản" name="TenDN" autocomplete="off" required>
            </div>
            <div>
                <input type="password" class="form-control" placeholder="Mật khẩu" name="Matkhau" required>
            </div>
            <div>
                <input type="text" class="form-control" placeholder="Họ tên" name="HotenKH" autocomplete="off" required>
            </div>
            <div>
                <input type="email" class="form-control" placeholder="Email" name="Email" autocomplete="off" required>
            </div>
            <div>
                <input type="text" class="form-control" placeholder="Địa chỉ" name="Diachi" autocomplete="off" required>
            </div>
            <div>
                <input type="text" class="form-control" placeholder="Số điện thoại" name="Dienthoai" autocomplete="off" required>
            </div>

            <div class="form__submit">
                <input type="submit" value="Đăng ký">
            </div>
        }
    </div>
    <div class="mt-3 text-center">Bạn đã có tài khoản ? <a href="@Url.Action("DangNhap", "NguoiDung")">Đăng nhập ngay !!</a></div>
</section>




