@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<section class="login container">
    <h2 class="login__title title">Đăng Nhập</h2>
    <span>@ViewBag.Thongbao</span>
    <div class="login__form">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div>
                <input type="text" class="form-control " placeholder="Tài khoản" name="TenDN" autocomplete="off" required>
            </div>
            <div>
                <input type="password" class="form-control" placeholder="Mật khẩu" name="Matkhau" required>
            </div>
            <div class="form__submit">
                <input type="submit" value="Đăng nhập">
            </div>
        }
    </div>
    <div class="mt-3 text-center" >Bạn chưa có tài khoản ? <a href="@Url.Action("DangKy", "NguoiDung")">Đăng ký ngay !!</a></div>
</section>
